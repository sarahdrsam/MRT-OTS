@model IEnumerable<Project2AP.Models.Purchase>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section id="content-main">
    <div class="container">
        <table style="width: 100%;">
            <tr>
                <td style="font-size: 15pt;">
                    Cart
                </td>
            </tr>
        </table>
        <table class="table-list">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Origin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subtotal)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Direction)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td style="text-align: center;">
                        RM @Html.DisplayFor(modelItem => item.Subtotal)
                    </td>
                    <td style="text-align: right;">
                        @Html.ActionLink("Delete", "Delete", new { purchaseId = item.PurchaseID })
                    </td>
                </tr>
            }

        </table>
        @{
            if (ViewBag.Item == 0)
            {
                <div style="width: 100%; text-align: center; font-style: italic; padding-top: 30px;">You have not added any ticket to cart</div>

                <div style="width: 100%; text-align: right; padding-top: 30px;">
                    @Html.ActionLink("Continue Purchasing", "Purchase", "Ticket", null, new { @class = "button4" })
                </div>
            }
            else
            {
                <div style="width: 100%; text-align: right; padding-top: 30px;">
                    <b>Total:</b> RM @ViewBag.Total.ToString("0.00")
                </div>
                <div style="width: 100%; text-align: right; padding-top: 30px;">
                    @Html.ActionLink("Proceed to Checkout", "Proceed", "Payment", null, new { @class = "button3" })
                </div>
                <div style="width: 100%; text-align: right; padding-top: 25px; padding-bottom: 25px;">
                    @Html.ActionLink("Continue Purchasing", "Purchase", "Ticket", null, new { @class = "button4" })
                </div>
            }
        }
    </div>
</section>




